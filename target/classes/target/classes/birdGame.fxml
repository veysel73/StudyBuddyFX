<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Circle?>

<AnchorPane fx:id="gamePane" onMouseClicked="#handleMouseClick" prefHeight="600" prefWidth="800" styleClass="game-background" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.studybuddy.BirdGameController">

    <Circle fx:id="bird" centerX="150" centerY="300" layoutX="-2.0" layoutY="2.0" radius="18.0" styleClass="bird" />

    <Label fx:id="scoreLabel" layoutX="20" layoutY="20" styleClass="score-label" text="Score: 0" />
    <Label fx:id="highScoreLabel" layoutX="20" layoutY="50" styleClass="score-label" text="High Score: 0" />

    <Label fx:id="gameOverLabel" alignment="CENTER" layoutX="350.0" layoutY="250" styleClass="game-over-label" text="GAME OVER" visible="false" />

    <Button fx:id="startButton" layoutX="350" layoutY="300" onAction="#startGame" styleClass="start-button" text="Start Game" />

</AnchorPane>
