<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="300.0" styleClass="main-pane" stylesheets="@Pomodoro.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.studybuddy.PomodoroController">
    <children>
        <VBox alignment="TOP_CENTER" layoutX="50.0" layoutY="32.0" prefHeight="400.0" prefWidth="300.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <HBox alignment="CENTER_RIGHT" prefHeight="30.0" prefWidth="200.0" styleClass="title-bar">
                    <children>
                        <Label styleClass="app-title" text="Pomodoro Timer" textFill="WHITE" HBox.hgrow="ALWAYS">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                            <HBox.margin>
                                <Insets left="10.0" />
                            </HBox.margin>
                        </Label>
                        <Pane HBox.hgrow="ALWAYS" />
                        <Button fx:id="minimizeButton" mnemonicParsing="false" onAction="#handleMinimize" styleClass="window-button" text="—">
                            <HBox.margin>
                                <Insets right="5.0" />
                            </HBox.margin>
                        </Button>
                        <Button fx:id="closeButton" mnemonicParsing="false" onAction="#handleClose" styleClass="window-button, close-button" text="✕" />
                    </children>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                </HBox>
                <Pane fx:id="mainPane" prefHeight="363.0" prefWidth="453.0" styleClass="content-pane" VBox.vgrow="ALWAYS">
                    <children>
                        <VBox alignment="CENTER" layoutY="27.0" prefHeight="310.0" prefWidth="300.0" spacing="20.0" AnchorPane.bottomAnchor="27.80000000000001" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="27.0">
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                            </padding>
                            <children>
                                <Label text="Pomodoro Zamanı Seçin" textFill="#f8f8f8">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <HBox fx:id="timerOptionsContainer" alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="10.0">
                                    <children>
                                        <Button fx:id="option25Button" mnemonicParsing="false" onAction="#handleTimerOptionClick" prefHeight="40.0" prefWidth="80.0" styleClass="option-button, selected-option" text="25 dk" />
                                        <Button fx:id="option35Button" mnemonicParsing="false" onAction="#handleTimerOptionClick" prefHeight="40.0" prefWidth="80.0" styleClass="option-button" text="35 dk" />
                                        <Button fx:id="option45Button" mnemonicParsing="false" onAction="#handleTimerOptionClick" prefHeight="40.0" prefWidth="80.0" styleClass="option-button" text="45 dk" />
                                    </children>
                                </HBox>
                                <Label fx:id="timerLabel" alignment="CENTER" prefHeight="100.0" prefWidth="200.0" styleClass="timer-label" text="25:00" textFill="#e8e8e8">
                                    <font>
                                        <Font name="System Bold" size="48.0" />
                                    </font>
                                </Label>
                                <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="20.0">
                                    <children>
                                        <Button fx:id="startButton" mnemonicParsing="false" onAction="#handleStartPause" prefHeight="40.0" prefWidth="120.0" styleClass="action-button, start-button" text="▶ Başlat" />
                                        <Button fx:id="resetButton" mnemonicParsing="false" onAction="#handleReset" prefHeight="40.0" prefWidth="120.0" styleClass="action-button, reset-button" text="↺ Sıfırla" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </Pane>
            </children>
        </VBox>
    </children>
</AnchorPane>
